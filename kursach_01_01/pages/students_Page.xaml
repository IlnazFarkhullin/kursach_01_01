<Page x:Class="kursach_01_01.pages.students_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kursach_01_01.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="students_page">
    <Grid>

        <Grid   x:Name="panelHeader" VerticalAlignment="Top" Height="40" Background="#FF0F4E7A" >
            <TextBlock Text="Студенты" HorizontalAlignment="Center"  VerticalAlignment="Center" Foreground="White"/>
        </Grid>
        <Grid Margin="0,0,0,72">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <ListView  Margin="0,42,0,0" x:Name="std" SelectionChanged="std_SelectionChanged"  Grid.RowSpan="2">
                <ListView.View>
                    <GridView>
                        
                        <GridViewColumn Header="Наименование" DisplayMemberBinding ="{Binding Name}"  Width="auto"/>
                        <GridViewColumn Header="Возрост" DisplayMemberBinding ="{Binding age}"  Width="auto"/>


                    </GridView>
                </ListView.View>
            </ListView>
          </Grid>
    </Grid>
</Page>
